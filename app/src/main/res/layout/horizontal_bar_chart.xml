<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/completeBar"
        android:layout_width="0dp"
        tools:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@color/sheet_to_floor_add_btn_on_tap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/incompleteBar"
        android:layout_width="0dp"
        tools:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@color/linked_add_btn_on_tap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/completeBar" />

    <TextView
        android:id="@+id/completeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/completeBar"
        app:layout_constraintStart_toEndOf="@id/completeBar"
        app:layout_constraintTop_toTopOf="@id/completeBar"
        tools:text="20" />

    <TextView
        android:id="@+id/incompleteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/incompleteBar"
        app:layout_constraintStart_toEndOf="@id/incompleteBar"
        app:layout_constraintTop_toTopOf="@id/incompleteBar"
        tools:text="30" />

</androidx.constraintlayout.widget.ConstraintLayout>